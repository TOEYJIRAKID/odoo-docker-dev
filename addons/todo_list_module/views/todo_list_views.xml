<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_todo_list_form" model="ir.ui.view">
        <field name="name">todo.list.form</field>
        <field name="model">todo.list</field>
        <field name="arch" type="xml">
            <form string="Todo List" class="o_form_sheet_bg">
                <header>
                    <button name="action_start_progress" string="PROGRESS" type="object"
                            class="oe_highlight"
                            invisible="not is_draft"/>
                    <button name="action_mark_complete" string="DONE" type="object"
                            class="oe_highlight"
                            invisible="not can_mark_done"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,complete" options="{'clickable': False}"/>
                    <field name="is_draft" invisible="1"/>
                    <field name="is_in_progress" invisible="1"/>
                    <field name="is_complete" invisible="1"/>
                    <field name="all_tasks_done" invisible="1"/>
                    <field name="can_mark_done" invisible="1"/>
                </header>
                <sheet>
                    <div class="oe_title mb-3">
                        <label for="name" class="oe_edit_only" invisible="is_complete"/>
                        <h1>
                            <field name="name" placeholder="Add a title"
                                   readonly="is_complete"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags"
                                   options="{'no_create_edit': False}"
                                   readonly="is_complete"/>
                        </group>
                        <group>
                            </group>
                    </group>
                    <group class="mt-2">
                         <group>
                            <field name="start_date" readonly="is_complete"/>
                        </group>
                        <group>
                            <field name="end_date" readonly="is_complete"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="List" name="tasks"> 
                            <field name="task_ids" mode="tree" readonly="is_complete"> 
                                    <tree string="Tasks" editable="bottom">
                                        <field name="sequence" widget="handle" width="10px"/>
                                        <field name="name" string="name" width="150px"/>
                                        <field name="description" string="Description" width="300px"/>
                                        <field name="is_complete" string="Is Complete" invisible="parent.is_draft"/>
                                    </tree>
                            </field>
                        </page>
                        <page string="Attendee" name="attendees_page_for_form"> 
                            <field name="attendee_ids" options="{'no_create_edit': True}" readonly="is_complete">
                                <tree string="Attendees" editable="bottom">
                                    <field name="name" string="Attendee" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                </form>
        </field>
    </record>

    <record id="view_todo_list_tree" model="ir.ui.view">
        <field name="name">todo.list.tree</field>
        <field name="model">todo.list</field>
        <field name="arch" type="xml">
            <tree string="Todo Lists"
                  decoration-muted="state=='draft'"
                  decoration-info="state=='in_progress'"
                  decoration-success="state=='complete'">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="state" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="view_todo_list_search" model="ir.ui.view">
        <field name="name">todo.list.search</field>
        <field name="model">todo.list</field>
        <field name="arch" type="xml">
            <search string="Search Todo Lists">
                <field name="name" string="Title"/>
                <field name="tag_ids" string="Tag"/>
                <field name="attendee_ids" string="Attendee"/>
                <separator/>
                <filter string="Draft" name="draft_filter" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="inprogress_filter" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Complete" name="complete_filter" domain="[('state', '=', 'complete')]"/>
                <filter string="Uncomplete" name="uncomplete_filter" domain="[('state', '!=', 'complete')]"/>
                <separator/>
                <filter string="My Todos" name="my_todos_filter" domain="[('attendee_ids', 'in', [uid])]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Start Date" name="group_by_start_date" context="{'group_by': 'start_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_todo_list_all" model="ir.actions.act_window">
        <field name="name">Todo List</field>
        <field name="res_model">todo.list</field>
        <field name="view_mode">tree,form</field> 
        <field name="search_view_id" ref="view_todo_list_search"/>
        <field name="context">{}</field> 
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Todo List!
            </p>
        </field>
    </record>

    <record id="action_todo_list_uncomplete" model="ir.actions.act_window">
        <field name="name">Todo List</field>
        <field name="res_model">todo.list</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_todo_list_search"/>
        <field name="domain">[('state', '!=', 'complete')]</field>
        <field name="context">{'search_default_uncomplete_filter': 1, 'default_state': 'draft'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No uncompleted todo lists. Good job!
            </p>
        </field>
    </record>

    <record id="action_todo_list_complete" model="ir.actions.act_window">
        <field name="name">Todo List</field>
        <field name="res_model">todo.list</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_todo_list_search"/>
        <field name="domain">[('state', '=', 'complete')]</field>
        <field name="context">{'search_default_complete_filter': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No completed todo lists yet.
            </p>
        </field>
    </record>
</odoo>