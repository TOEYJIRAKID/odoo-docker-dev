<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_todo_list_form" model="ir.ui.view">
        <field name="name">todo.list.form</field>
        <field name="model">todo.list</field>
        <field name="arch" type="xml">
            <form string="Todo List">
                <header>
                    <button name="action_start_progress" string="Start Progress" type="object"
                            class="oe_highlight" if="state == 'draft'"/>
                    <button name="action_mark_complete" string="Mark as Done" type="object"
                            class="oe_highlight" if="state == 'in_progress' and all_tasks_done"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,complete"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Prepare for Odoo Exam"
                                   readonly="state == 'complete'"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="start_date" readonly="state == 'complete'"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': False}"
                                   readonly="state == 'complete'"/>
                        </group>
                        <group>
                            <field name="end_date" readonly="state == 'complete'"/>
                            <field name="attendee_ids" widget="many2many_tags" options="{'no_create_edit': True}"
                                   readonly="state == 'complete'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tasks" name="tasks">
                            <field name="task_ids" mode="tree,kanban" readonly="state == 'complete'">
                                <tree string="Tasks" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="is_complete" if="parent.state == 'in_progress'"/>
                                    <field name="todo_list_state" invisible="1"/> 
                                </tree>
                            </field>
                        </page>
                        <page string="Attendees" name="attendees_page_for_form" if="state != 'complete'">
                            <field name="attendee_ids" mode="tree" readonly="state == 'complete'">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_todo_list_tree" model="ir.ui.view">
        <field name="name">todo.list.tree</field>
        <field name="model">todo.list</field>
        <field name="arch" type="xml">
            <tree string="Todo Lists" decoration-muted="state=='complete'" decoration-info="state=='in_progress'">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="tag_ids" widget="many2many_tags" optional="show"/>
                <field name="state"/>
                <field name="activity_ids" widget="list_activity" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="view_todo_list_search" model="ir.ui.view">
        <field name="name">todo.list.search</field>
        <field name="model">todo.list</field>
        <field name="arch" type="xml">
            <search string="Search Todo Lists">
                <field name="name" string="Title"/>
                <field name="tag_ids" string="Tag"/>
                <field name="attendee_ids" string="Attendee"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Complete" name="complete" domain="[('state', '=', 'complete')]"/>
                <filter string="Uncomplete" name="uncomplete" domain="[('state', '!=', 'complete')]"/>
                <separator/>
                <filter string="My Todos" name="my_todos" domain="[('attendee_ids', 'in', [uid])]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Start Date" name="group_by_start_date" context="{'group_by': 'start_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_todo_list_all" model="ir.actions.act_window">
        <field name="name">Todo Lists</field>
        <field name="res_model">todo.list</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="search_view_id" ref="view_todo_list_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Todo List!
            </p>
        </field>
    </record>

    <record id="action_todo_list_uncomplete" model="ir.actions.act_window">
        <field name="name">Uncomplete Todos</field>
        <field name="res_model">todo.list</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="search_view_id" ref="view_todo_list_search"/>
        <field name="domain">[("state", "!=", "complete")]</field>
        <field name="context">{"search_default_uncomplete": 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No uncompleted todo lists. Good job!
            </p>
        </field>
    </record>

    <record id="action_todo_list_complete" model="ir.actions.act_window">
        <field name="name">Complete Todos</field>
        <field name="res_model">todo.list</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="search_view_id" ref="view_todo_list_search"/>
        <field name="domain">[("state", "=", "complete")]</field>
        <field name="context">{"search_default_complete": 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No completed todo lists yet.
            </p>
        </field>
    </record>
</odoo>